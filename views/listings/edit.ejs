<% layout("/layouts/boilerplate") %>
<div class="row">
  <div class="col-8 offset-2">
    <div class="container my-5">
      <h3 class="mb-4">Edit your listing</h3>
      <form method="POST" action="/listings/<%= listing._id %>?_method=PUT">
        <div class="mb-3">
          <label for="title" class="form-label">
            Title <span class="text-danger">*</span>
          </label>
          <input
            type="text"
            class="form-control"
            id="title"
            name="listing[title]"
            value="<%= listing.title %>"
            placeholder="Enter Title"
            required
          />
        </div>

        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea
            id="description"
            name="listing[description]"
            rows="4"
            placeholder="Enter Description"
            class="form-control"
          >
<%= listing.description %></textarea
          >
        </div>

        <div class="mb-3">
          <label for="imageFilename" class="form-label">Image Filename</label>
          <input
            type="text"
            class="form-control"
            id="imageFilename"
            name="listing[image][filename]"
            value="<%= listing.image ? listing.image.filename : '' %>"
            placeholder="Enter Image Filename"
          />
        </div>

        <div class="mb-3">
          <label for="imageUrl" class="form-label">Image URL</label>
          <input
            type="text"
            class="form-control"
            id="imageUrl"
            name="listing[image][url]"
            value="<%= listing.image ? listing.image.url : '' %>"
            placeholder="Enter Image URL"
          />
        </div>

        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input
              type="number"
              class="form-control"
              id="price"
              name="listing[price]"
              value="<%= listing.price %>"
              placeholder="Enter Price"
            />
          </div>

          <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input
              type="text"
              class="form-control"
              id="country"
              name="listing[country]"
              value="<%= listing.country %>"
              placeholder="Enter Country"
            />
          </div>
        </div>

        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input
            type="text"
            class="form-control"
            id="location"
            name="listing[location]"
            value="<%= listing.location %>"
            placeholder="Enter Location"
          />
        </div>

        <button type="submit" class="btn btn-primary">Update</button>
      </form>
    </div>
  </div>
</div>
