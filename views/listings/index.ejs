<% layout("/layouts/boilerplate") %>
<body>
  <h3 class="listing-title">All Listings</h3>
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for (let listing of allListings) { %>
    <a href="/listing/<%= listing._id %>" class="listing-link">
      <div class="card">
        <img
          src="<%= listing.image && listing.image.url ? listing.image.url : '/images/default.jpg' %>"
          class="card-img-top"
          alt="Listing-image"
          style="height: 20rem"
        />
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %><br /></b>
            &#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") :
            "N/A" %>/night
          </p>
        </div>
      </div>
    </a>
    <% } %>
  </div>
</body>
