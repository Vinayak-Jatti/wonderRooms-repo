<style>
  /* ---------------- Global ---------------- */
  @import url("https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap");

  body {
    font-family: "Copperplate Gothic Light", "Cascadia Mono", "sans";
    background: #e0e2e5; /* soft background for the "paper" look */
    color: #1a1a1a;
    margin: 0;
    padding: 2rem 1rem;
    line-height: 1.7;
    display: flex;
    justify-content: center;
  }

  /* Main Document Wrapper */
  main {
    max-width: 900px;
    background: #ffffff; /* paper background */
    padding: 3rem 4rem;
    border-radius: 12px;
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.12);
    border-left: 6px solid #010215; /* stylish accent stripe */
    position: relative;
  }

  /* Accent Stripe Pseudo */
  main::before {
    content: "";
    position: absolute;
    left: 0;
    top: 0;
    width: 6px;
    height: 100%;
    background: linear-gradient(to bottom, #fe424d, #ff6f6f);
    border-radius: 12px 0 0 12px;
  }

  /* Document Header */
  .doc-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .doc-header h1 {
    font-size: 3rem;
    font-weight: 700;
    color: #040429;
    margin-bottom: 0.3rem;
    letter-spacing: 1px;
  }

  .doc-header p {
    font-size: 1rem;
    color: #555;
    font-weight: 500;
  }

  /* Document Sections */
  .doc-section {
    margin-bottom: 2.5rem;
  }

  .doc-section h2 {
    font-size: 1.8rem;
    color: #000000;
    border-bottom: 2px solid #272626;
    padding-bottom: 0.3rem;
    margin-bottom: 1rem;
    font-weight: 600;
  }

  .doc-section p,
  .doc-section ul {
    font-size: 1rem;
    color: #333;
    margin-bottom: 1rem;
  }

  .doc-section ul {
    list-style-type: disc;
    margin-left: 1.5rem;
  }

  /* Links */
  a {
    color: #fe424d;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  a:hover {
    color: #ff6f6f;
    text-decoration: underline;
  }

  /* Footer */
  footer {
    text-align: center;
    padding: 2rem 0;
    color: #777;
    font-size: 0.9rem;
    border-top: 1px solid #ddd;
    margin-top: 3rem;
  }

  /* ---------------- Modern UI Touches ---------------- */

  /* Section Hover Highlight */
  .doc-section:hover {
    background: #c0bebe54;
    transition: background 0.5s ease;
    border-left: 4px solid #01002c;
    padding-left: 3.5rem;
  }

  /* Subtle drop shadow for paragraphs */
  .doc-section p {
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
  }

  /* Responsive */
  @media (max-width: 768px) {
    main {
      padding: 2rem 2rem;
      border-left: none;
      border-radius: 12px;
    }

    main::before {
      display: none;
    }

    .doc-header h1 {
      font-size: 2.2rem;
    }

    .doc-section h2 {
      font-size: 1.5rem;
    }
  }
</style>
